<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
    x:Class="CheescakeOrdezkaritza.MainPage"
    Title="Hasiera">

    <Grid RowDefinitions="Auto"
          ColumnDefinitions="2*,3*"
          Padding="20"
          ColumnSpacing="20">

        <!-- Left Column (Frame with Syncfusion Calendar) -->
        <Frame Grid.Column="0"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Padding="10">

            <VerticalStackLayout Spacing="20">

                <Label Text="CHEESCAKE LAB"
                       FontAttributes="Bold"
                       FontSize="28"
                       HorizontalOptions="Center"
                       TextColor="#333" />

                <Image Source="logo2.png"
                       WidthRequest="120"
                       HeightRequest="120"
                       HorizontalOptions="Center" />

                <Button Text="Email-a"
                        CornerRadius="20"
                        BackgroundColor="#FFBF00"
                        TextColor="White"
                        WidthRequest="120"
                        Clicked="OnContactClicked"
                        HorizontalOptions="Center" />

                <!-- Syncfusion Calendar -->
                <sf:SfCalendar x:Name="Calendar"
                               HeightRequest="200"
                               HorizontalOptions="FillAndExpand"
                               BackgroundColor="LightYellow"/>
            </VerticalStackLayout>

        </Frame>

        <!-- Right Column (Map) -->
        <Frame Grid.Column="1"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Padding="0">
            <WebView x:Name="MapView"
                     HeightRequest="500"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"/>
        </Frame>

    </Grid>
</ContentPage>
